                        <input class="form-control text-box single-line" type="number" name="bandwidth" required />
                    </div>
                </div>
            </div>

        </div>

        <div class="col-sm-12 col-md-4">

            <div class="row">
                <div class="form-group">
                    <button class="btn-group-justified" type="submit">Submit</button>
                </div>
            </div>

        </div>

    </div>
}

